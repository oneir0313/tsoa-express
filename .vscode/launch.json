{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "app-ts",
            "preLaunchTask": "swagger",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "-r",
                "ts-node/register/transpile-only"
            ],
            "args": [
                "src/index.ts"
            ],
            "cwd": "${workspaceFolder}/app-ts",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
        }
    ]
}
